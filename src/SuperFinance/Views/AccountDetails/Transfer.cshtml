@model TransferModel
@{
	ViewBag.Title = "Create Transfer";
}

<section class="form">
	@using (Html.BeginForm())
	{
		<h1> @ViewBag.Title </h1>
		<hr />

		@Html.AntiForgeryToken()

		<fieldset>

			<div class="form-group">
				@Html.LabelFor(m => m.ToAccountNumber, new { @class = "label-big" })
				@Html.TextBoxFor(m => m.ToAccountNumber, new { @class = "form-control", placeholder = "Please enter credit account number" })
				@Html.ValidationMessageFor(m => m.ToAccountNumber)
			</div>

			<div class="form-group">
				@Html.LabelFor(m => m.Amount, new { @class = "label-big" })
				@Html.TextBoxFor(m => m.Amount, new { @class = "form-control", placeholder = "Please enter amount" })
				@Html.ValidationMessageFor(m => m.Amount)
			</div>

			<div class="form-group">
				@Html.LabelFor(m => m.Remarks, new { @class = "label-big" })
				@Html.TextBoxFor(m => m.Remarks, new { @class = "form-control", placeholder = "Please enter remarks" })
				@Html.ValidationMessageFor(m => m.Remarks)
			</div>

			@Html.HiddenFor(m => m.FromAccountId)

			<br />
			<br />

			<div class="form-group">
				<button type="submit" class="btn btn-primary">Submit</button>
			</div>
		</fieldset>
	}
</section>